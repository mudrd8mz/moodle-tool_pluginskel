{{!
    @template file/db_messages

    Message providers db/messages.php file.

    Context variables required for this template:
    * component
    * copyright
    * message_providers

    Example context (json):
    {
        "component": "local_test",
        "copyright": "2021 David Mudr√°k <david@moodle.com>",
        "message_providers": []
    }
}}
{{< common/boilerplate_php }}
{{$ description }}Plugin message providers are defined here.{{/ description }}
{{$ package }}{{ component }}{{/ package }}
{{$ extratags }}
 * @category    message
{{/ extratags }}
{{$ copyright }}{{ copyright }}{{/ copyright }}
{{/ common/boilerplate_php }}

$messageproviders = [
    {{# message_providers }}

    '{{ .name }}' => [{{# capability }}
        'capability' => '{{ . }}',{{/ capability }}
    ],
    {{/ message_providers }}
];
