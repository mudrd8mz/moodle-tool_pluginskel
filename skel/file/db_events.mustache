{{!
    @template file/db_events

    Events declaration file.

    Context variables required for this template:
    * component
    * copyright
    * observers

    Example context (json):
    {
        "component": "local_test",
        "copyright": "2021 David Mudr√°k <david@moodle.com>",
        "observers": []
    }
}}
{{< common/boilerplate_php }}
{{$ description }}Plugin event observers are registered here.{{/ description }}
{{$ package }}{{ component }}{{/ package }}
{{$ extratags }}
 * @category    event
{{/ extratags }}
{{$ copyright }}{{ copyright }}{{/ copyright }}
{{/ common/boilerplate_php }}

$observers = [
    {{# observers }}

    [
        'eventname' => '{{{ .eventname }}}',
        'callback' => '{{{ .callback }}}',
        {{# .includefile }}
        'includefile' => '{{ . }}',
        {{/ .includefile }}
        {{# .priority }}
        'priority' => {{ . }},
        {{/ .priority }}
        {{# .has_internal }}
        {{# internal }}
        'internal' => true,
        {{/ internal }}
        {{^ internal }}
        'internal' => false,
        {{/ internal }}
        {{/ .has_internal }}
    ],
    {{/ observers }}
];
